<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="2dp"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/square_image_view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/grid_item_padding_left" >

            <com.basso.basso.widgets.theme.ThemeableTextView
                android:id="@+id/line_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:fontFamily="sans-serif"
                android:textColor="@color/action_bar_background"
                android:textSize="@dimen/text_size_medium"
                app:themeResource="@null" />

            <com.basso.basso.widgets.theme.ThemeableTextView
                android:id="@+id/line_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_one"
                android:singleLine="true"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/action_bar_background"
                android:textSize="@dimen/text_size_small"
                app:themeResource="@null" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>